@page "/landing"
@inject NavigationManager Nav

<div class="landing-wrapper">
    @* Section 1: Hero *@
    <header class="hero">
        <div class="container text-center">
            <h1 class="display-3 fw-bold mb-3">StokvelSync</h1>
            <p class="fs-4 mb-5">Empowering your financial future through collective discipline.</p>
            <button class="cta-button" @onclick='() => Nav.NavigateTo("/register")'>Join Our Group Now</button>
        </div>
    </header>

    @* Section 2: The Value Prop *@
    <section class="info-section">
        <div class="container text-center">
            <h2 class="section-title">Why Join StokvelSync?</h2>
            <p class="section-subtitle">We combine the tradition of South African Stokvels with modern technology to ensure your money is safe and your goals are reached.</p>
        </div>
    </section>

    @* Section 3: Growth (The Tiers) *@
    <section class="growth-section bg-light">
        <div class="container">
            <h2 class="text-center mb-5">Choose Your Growth Path</h2>
            <div class="tier-cloud">
                @foreach (var tier in new int[] { 50, 60, 70, 80, 90, 100, 150, 200, 250, 300, 400, 500 })
                {
                    <div class="tier-bubble">R @tier</div>
                }
            </div>
            <p class="text-center mt-4 text-muted">Pick 2 or more columns. The more you save, the faster we grow together.</p>
        </div>
    </section>

    @* Section 4: Discipline (Penalties) *@
    <section class="discipline-section">
        <div class="container">
            <h2 class="text-center mb-5">Rules for Success</h2>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="penalty-box late">
                        <h3>Late Payment (After 7th)</h3>
                        <p>Consistency is key. Late contributions disrupt the flow.</p>
                        <div class="amount">R 50.00</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="penalty-box missed">
                        <h3>Missed Month</h3>
                        <p>A missed month is a missed opportunity for the group.</p>
                        <div class="amount">R 100.00</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* Section 5: Banking *@
    <section class="bank-section text-white">
        <div class="container text-center">
            <h3 class="mb-4">Official Bank Account</h3>
            <div class="bank-card mx-auto">
                <h4>Standard Bank</h4>
                <p class="account-num">10142013372</p>
            </div>
        </div>
    </section>
</div>