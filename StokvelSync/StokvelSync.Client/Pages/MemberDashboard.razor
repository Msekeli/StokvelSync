@using static System.Net.WebRequestMethods
<div class="card border-0 shadow-sm rounded-4 mt-4">
    <div class="card-body p-4">
        <h5 class="fw-bold mb-3" style="color: var(--stokvel-dark);">
            <i class="bi bi-camera-fill me-2 text-primary"></i>Submit Payment Receipt
        </h5>
        <p class="small text-muted mb-4">Tap below to take a photo or upload your bank proof of payment.</p>

        <div class="mb-3">
            @* 'capture' attribute helps mobile devices open the camera directly *@
            <InputFile OnChange="HandleFileSelected" 
                       class="form-control form-control-md border-2" 
                       accept="image/*" 
                       id="receiptUpload" />
        </div>

        @if (isUploading)
        {
            <div class="d-flex align-items-center justify-content-center py-3 bg-light rounded-3 mb-3">
                <div class="spinner-border spinner-border-sm text-primary me-2"></div>
                <span class="small fw-bold text-primary">Uploading your receipt...</span>
            </div>
        }

        @if (!string.IsNullOrEmpty(uploadMessage))
        {
            <div class="alert @(uploadMessage.Contains("Error") ? "alert-danger" : "alert-success") py-2 shadow-sm animate-in">
                <i class="bi @(uploadMessage.Contains("Error") ? "bi-x-circle" : "bi-check-circle") me-2"></i>
                <span class="small fw-bold">@uploadMessage</span>
            </div>
        }
    </div>
</div>

@code {
    [Inject] private HttpClient Http { get; set; } = null!;
    
    [Parameter] public string Email { get; set; } = ""; // Passed from the URL or Login state
    private bool isUploading = false;
    private string uploadMessage = "";

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null) return;

        isUploading = true;
        uploadMessage = "";

        try
        {
            // Senior Tip: Mobile photos are high-res. We allow up to 10MB.
            long maxFileSize = 1024 * 1024 * 10; 
            
            using var content = new MultipartFormDataContent();
            
            // Create the file content from the Blazor stream
            var fileStream = file.OpenReadStream(maxFileSize);
            var fileContent = new StreamContent(fileStream);
            
            // Ensure headers match what the ASP.NET backend expects
            fileContent.Headers.ContentType = new System.Net.Http.Headers.MediaTypeHeaderValue(file.ContentType);
            
            // "receipt" must match form.Files["receipt"] in your ReceiptFunctions.cs
            content.Add(fileContent, "receipt", file.Name);
            
            // "email" must match form["email"] in your ReceiptFunctions.cs
            content.Add(new StringContent(Email), "email");

            // Post to the updated API endpoint
            var response = await Http.PostAsync("UploadReceipt", content);

            if (response.IsSuccessStatusCode)
            {
                uploadMessage = "Success! Receipt received for verification.";
            }
            else
            {
                var errorBody = await response.Content.ReadAsStringAsync();
                uploadMessage = $"Error: Upload failed. {errorBody}";
            }
        }
        catch (Exception ex)
        {
            uploadMessage = "Error: Connection issue. " + ex.Message;
            Console.WriteLine(ex.ToString());
        }
        finally
        {
            isUploading = false;
        }
    }
}

<style>
    .animate-in { animation: slideUp 0.3s ease-out; }
    @@keyframes slideUp {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>