@page "/login"
@inject StokvelSync.Client.Services.UserSession Session
@inject NavigationManager Nav

@* UI with your Blue Family styling goes here *@

<div class="login-card">
    <h3 class="fw-bold">Member Login</h3>
    <input type="email" @bind="emailInput" class="form-control mb-3" placeholder="Enter your email" />
    <button class="btn-primary-custom w-100" @onclick="HandleLogin">Sign In</button>
</div>

@code {
    private string emailInput = "";

    private void HandleLogin()
    {
        if (!string.IsNullOrWhiteSpace(emailInput))
        {
            // Set the session for this specific visit
            Session.Email = emailInput;
            Nav.NavigateTo("/dashboard");
        }
    }
}